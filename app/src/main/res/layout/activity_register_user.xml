<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.breda.muhammadbredataftayani_1202154209_modul6.RegisterUser">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/capucin" />

    <EditText
        android:id="@+id/rgEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:requiresFadingEdge="vertical"
        />

    <EditText
        android:id="@+id/rgPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/rgEmail"
        android:layout_alignStart="@+id/rgEmail"
        android:layout_below="@+id/rgEmail"
        android:layout_marginTop="17dp"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/rgLogin"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_below="@+id/rgPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Register" />

    <TextView
        android:id="@+id/rgMove"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/rgPass"
        android:layout_alignRight="@+id/rgPass"
        android:layout_below="@+id/rgLogin"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Login if you have account"
        android:textSize="20dp"
        android:textColor="@color/red"
        />

</RelativeLayout>
